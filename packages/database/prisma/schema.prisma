// Prisma Schema for Contrarian AI Trading Platform
// This is the shared source of truth for database schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =============================================================================
// ENUMS
// =============================================================================

enum Decision {
  BUY
  HOLD
  SELL
}

enum TradeStatus {
  PENDING
  OPEN
  CLOSED
  CANCELLED
}

enum SystemStatus {
  ACTIVE
  PAUSED
  EMERGENCY_STOP
}

// =============================================================================
// AUTH MODELS (NextAuth.js)
// =============================================================================

// User account model for authentication
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]

  @@map("users")
}

// OAuth account linkage
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// Session management
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// Email verification tokens
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// =============================================================================
// TRADING MODELS
// =============================================================================

// Crypto asset definition
model Asset {
  id          String    @id @default(cuid())
  symbol      String    @unique
  name        String?
  isActive    Boolean   @default(true)
  lastPrice   Decimal?  @db.Decimal(18, 8)
  lastUpdated DateTime?
  createdAt   DateTime  @default(now())

  candles          Candle[]
  sentimentLogs    SentimentLog[]
  councilSessions  CouncilSession[]
  trades           Trade[]
  scaledPositions  ScaledPosition[]
}

// OHLCV candle data
model Candle {
  id        String   @id @default(cuid())
  assetId   String
  timestamp DateTime
  timeframe String   @default("15m")
  open      Decimal  @db.Decimal(18, 8)
  high      Decimal  @db.Decimal(18, 8)
  low       Decimal  @db.Decimal(18, 8)
  close     Decimal  @db.Decimal(18, 8)
  volume    Decimal  @db.Decimal(24, 8)

  asset Asset @relation(fields: [assetId], references: [id])

  @@unique([assetId, timestamp, timeframe])
  @@index([assetId, timestamp])
}

// Sentiment data from various sources
model SentimentLog {
  id             String   @id @default(cuid())
  assetId        String
  timestamp      DateTime
  source         String
  galaxyScore    Int?
  altRank        Int?
  socialVolume   Int?
  rawText        String?  @db.Text
  sentimentScore Int?
  createdAt      DateTime @default(now())

  asset Asset @relation(fields: [assetId], references: [id])

  @@index([assetId, timestamp])
}

// AI council deliberation session
model CouncilSession {
  id               String   @id @default(cuid())
  assetId          String
  timestamp        DateTime
  sentimentScore   Int
  technicalSignal  String
  technicalDetails Json?
  visionAnalysis   String?  @db.Text
  visionConfidence Decimal? @db.Decimal(3, 2)
  finalDecision    Decision
  reasoningLog     String   @db.Text
  executedTradeId  String?
  createdAt        DateTime @default(now())

  // Story 5.3: Multi-Factor Analysis
  buyFactorsMet    Int?
  sellFactorsMet   Int?
  factorsTriggered String?  @db.Text

  asset Asset  @relation(fields: [assetId], references: [id])
  trade Trade? @relation(fields: [executedTradeId], references: [id])

  @@index([assetId, timestamp])
}

// Trade execution records
model Trade {
  id               String      @id @default(cuid())
  assetId          String
  councilSessionId String?
  status           TradeStatus @default(PENDING)
  side             String      @default("BUY")
  entryPrice       Decimal     @db.Decimal(18, 8)
  size             Decimal     @db.Decimal(18, 8)
  entryTime        DateTime
  stopLossPrice    Decimal     @db.Decimal(18, 8)
  takeProfitPrice  Decimal?    @db.Decimal(18, 8)
  exitPrice        Decimal?    @db.Decimal(18, 8)
  exitTime         DateTime?
  pnl              Decimal?    @db.Decimal(18, 8)
  pnlPercent       Decimal?    @db.Decimal(8, 4)
  exitReason       String?
  krakenOrderId    String?
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  asset           Asset            @relation(fields: [assetId], references: [id])
  councilSessions CouncilSession[]
}

// =============================================================================
// SYSTEM CONFIGURATION (Story 3.4: Global Safety Switch)
// =============================================================================

// System-wide configuration for trading controls and safety mechanisms
model SystemConfig {
  id                String       @id @default("system")
  status            SystemStatus @default(ACTIVE)
  tradingEnabled    Boolean      @default(true)
  initialBalance    Decimal      @db.Decimal(18, 8)
  maxDrawdownPct    Decimal      @default(0.20) @db.Decimal(5, 4)
  lastDrawdownCheck DateTime?
  emergencyStopAt   DateTime?
  emergencyReason   String?
  updatedAt         DateTime     @updatedAt

  @@map("system_config")
}

// =============================================================================
// SCALED POSITION MODELS (Story 5.4: Scale In/Out Positions)
// =============================================================================

// Parent scaled position tracking
model ScaledPosition {
  id                String    @id @default(cuid())
  assetId           String
  direction         String    @db.VarChar(20)  // SCALE_IN or SCALE_OUT
  isActive          Boolean   @default(true)
  targetSize        Decimal   @db.Decimal(18, 8)
  filledSize        Decimal   @default(0) @db.Decimal(18, 8)
  remainingSize     Decimal   @db.Decimal(18, 8)
  averagePrice      Decimal?  @db.Decimal(18, 8)
  totalCost         Decimal   @default(0) @db.Decimal(18, 2)
  numScales         Int       @default(3)
  scalesExecuted    Int       @default(0)
  createdAt         DateTime  @default(now())
  completedAt       DateTime?
  councilSessionId  String?
  parentTradeId     String?

  asset         Asset         @relation(fields: [assetId], references: [id])
  scaleOrders   ScaleOrder[]

  @@index([assetId])
  @@index([isActive])
  @@index([parentTradeId])
}

// Individual scale order within a scaled position
model ScaleOrder {
  id                  String    @id @default(cuid())
  scaledPositionId    String
  scaleNumber         Int
  status              String    @default("PENDING") @db.VarChar(20)
  triggerType         String    @db.VarChar(50)  // IMMEDIATE, PRICE_DROP, CAPITULATION, PROFIT_TARGET, TRAILING_STOP
  triggerPrice        Decimal?  @db.Decimal(18, 8)
  triggerPct          Decimal?  @db.Decimal(5, 2)
  targetSize          Decimal   @db.Decimal(18, 8)
  executedSize        Decimal?  @db.Decimal(18, 8)
  executedPrice       Decimal?  @db.Decimal(18, 8)
  tradeId             String?
  createdAt           DateTime  @default(now())
  triggeredAt         DateTime?
  executedAt          DateTime?

  scaledPosition      ScaledPosition @relation(fields: [scaledPositionId], references: [id])

  @@index([scaledPositionId])
  @@index([status])
  @@index([tradeId])
}

// =============================================================================
// PORTFOLIO SNAPSHOT (Story 5.5: Risk Parameter Optimization)
// =============================================================================

// Portfolio value snapshots for drawdown tracking
model PortfolioSnapshot {
  id              String   @id @default(cuid())
  timestamp       DateTime @default(now())
  portfolioValue  Decimal  @db.Decimal(18, 2)
  peakValue       Decimal  @db.Decimal(18, 2)
  drawdownPct     Decimal  @db.Decimal(8, 4)
  dailyPnl        Decimal? @db.Decimal(18, 2)
  dailyPnlPct     Decimal? @db.Decimal(8, 4)

  @@index([timestamp])
}

// =============================================================================
// ON-CHAIN DATA MODELS (Story 5.6: On-Chain Data Integration)
// =============================================================================

// Exchange inflow/outflow data for accumulation/distribution analysis
model ExchangeFlow {
  id              String   @id @default(cuid())
  assetSymbol     String   @db.VarChar(20)
  timestamp       DateTime
  inflowUsd       Decimal  @db.Decimal(18, 2)
  outflowUsd      Decimal  @db.Decimal(18, 2)
  netFlowUsd      Decimal  @db.Decimal(18, 2)
  avgNetFlow7d    Decimal? @db.Decimal(18, 2)
  source          String   @db.VarChar(50)

  @@index([assetSymbol])
  @@index([timestamp])
}

// Large wallet transaction tracking
model WhaleActivity {
  id                    String   @id @default(cuid())
  assetSymbol           String   @db.VarChar(20)
  timestamp             DateTime
  largeTxCount          Int
  totalWhaleVolumeUsd   Decimal  @db.Decimal(18, 2)
  whaleBuyVolume        Decimal? @db.Decimal(18, 2)
  whaleSellVolume       Decimal? @db.Decimal(18, 2)
  avgLargeTxCount7d     Int?
  source                String   @db.VarChar(50)

  @@index([assetSymbol])
  @@index([timestamp])
}

// Perpetual futures funding rates for squeeze detection
model FundingRate {
  id                  String   @id @default(cuid())
  assetSymbol         String   @db.VarChar(20)
  timestamp           DateTime
  exchange            String   @db.VarChar(50)
  fundingRate         Decimal  @db.Decimal(10, 6)
  avgFundingRate24h   Decimal? @db.Decimal(10, 6)
  openInterestUsd     Decimal? @db.Decimal(18, 2)
  source              String   @db.VarChar(50)

  @@index([assetSymbol])
  @@index([timestamp])
}

// Stablecoin reserves on exchanges (buying power indicator)
model StablecoinReserves {
  id                  String   @id @default(cuid())
  timestamp           DateTime
  totalReservesUsd    Decimal  @db.Decimal(18, 2)
  usdtReserves        Decimal  @db.Decimal(18, 2)
  usdcReserves        Decimal  @db.Decimal(18, 2)
  change24hPct        Decimal? @db.Decimal(8, 4)
  change7dPct         Decimal? @db.Decimal(8, 4)
  source              String   @db.VarChar(50)

  @@index([timestamp])
}
